<h1>Burgers!</h1>
<div>
    <h2>Burgers to devour!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{burger_name}}
            <button type="submit" class="change-devoured" data-id="{{id}}">Devour</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div>
    <h2>Burgers that are devoured</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger-name">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
    </div>
    <div class="form-group">
        <input type="radio" name="burger-devoured" value="1">Devoured!<br>
        <input type="radio" name="burger-devoured" value="0" checked> Not devoured
    </div>
    <button type="submit">Add burger</button>
</form>